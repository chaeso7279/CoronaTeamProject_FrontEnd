<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="알림">
        <SwitchPreference
            android:key="alert"
            android:defaultValue="false"
            android:summaryOff="비동의"
            android:summaryOn="동의"
            android:title="푸시 알림"/>

        <SwitchPreference
            android:key="sound"
            android:title="사운드"/>
        <SwitchPreference
            android:key="vibration"
            android:title="진동"/>

        <SeekBarPreference
            android:key="range"
            android:title="반경 설정"
            android:summary="반경 0km 내에서 확진자와 동선이 겹칠 경우, 알림을 받을 수 있습니다."
            android:max="25"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>